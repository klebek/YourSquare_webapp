@model RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Stwórz konto</h4>
            <hr />
            <!--<div asp-validation-summary="All" class="text-danger"></div>-->
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Imię:</label>
                <input asp-for="Name" class="form-control" placeholder="Imię"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nazwisko:</label>
                <input asp-for="Surname" class="form-control" placeholder="Nazwisko"/>
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Telefon kontaktowy:</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon kontaktowy"/>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Hasło: <span style="font-size: 12px;">(Hasło musi zawierać przynajmniej jeden znak specjalny)</span></label>
                <input asp-for="Password" class="form-control" placeholder="Hasło"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Powtórz hasło:</label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Powtórz hasło"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zarejestruj</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
