@using Microsoft.AspNetCore.Identity
@using YourSquare1.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" >Witaj, <span class="btn btn-default">@UserManager.GetUserName(User)</span></a>
            </li>
            <li>
                <a asp-area="" asp-controller="Advertisments" asp-action="UserAdvertisments"><span class="btn btn-primary">Moje ogloszenia</span></a>
            </li>
            <li>
                <a><button class="btn btn-danger">Wyloguj</button></a>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Rejestracja</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><button class="btn btn-primary">Zaloguj</button></a></li>
    </ul>
}
